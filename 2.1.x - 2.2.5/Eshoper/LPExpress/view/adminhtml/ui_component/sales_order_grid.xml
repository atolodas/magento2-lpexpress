<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="order_ship">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">order_ship_mass</item>
                        <item name="label" xsi:type="string" translate="true">Generate LP Express Label</item>
                        <item name="url" xsi:type="url" path="lp_mass/order/massLabel" />
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">LP Express Label</item>
                            <item name="message" xsi:type="string" translate="true">Are you sure you want to create shipping labels for selected items?</item>
                        </item>
                    </item>
                </argument>
            </action>
            <action name="order_manifest">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">order_mass</item>
                        <item name="label" xsi:type="string" translate="true">Generate LP Express Manifest</item>
                        <item name="url" xsi:type="url" path="lp_mass/order/massManifest"/>
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">LP Express Manifest</item>
                            <item name="message" xsi:type="string" translate="true">Are you sure you want to create manifest for selected items?</item>
                        </item>
                    </item>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
</listing>
